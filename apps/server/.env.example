# RevReq Server Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/revreq"

# Authentication
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-min-32-chars-here"
BETTER_AUTH_URL="http://localhost:3000"

# CORS Configuration
# Frontend URL for CORS
CORS_ORIGIN="http://localhost:3001"

# AI/LLM API Keys (for future use)
# OpenAI API key for GPT models
OPENAI_API_KEY="sk-..."

# Anthropic API key for Claude models
ANTHROPIC_API_KEY="sk-ant-..."

# Redis Configuration (Upstash) - for future use
# Get from: https://upstash.com
UPSTASH_REDIS_URL="https://..."
UPSTASH_REDIS_TOKEN="..."

# Email Service (Resend) - for future use
# Get from: https://resend.com
RESEND_API_KEY="re_..."

# Optional: Development Settings
NODE_ENV="development"
LOG_LEVEL="debug"